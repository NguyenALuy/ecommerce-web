    <%- include ('partials/nav') %>
        <%- include ('partials/banner') %>
            <main>
                <div class="wrapper">
                    <h2>Log In</h2>
                    <form method="post" action="/login">
                        <div class="input-box">
                            <input type="text" id="username" placeholder="Enter your username" required>
                        </div>
                        <div class="input-box">
                            <input type="password" id="password" placeholder="Enter password" required>
                        </div>
                        <div class="input-box button">
                            <input type="Submit" value="Log In">
                        </div>
                        <div class="text">
                            <h3>Create an account? <a href="/signup">Sign Up Now</a></h3>
                        </div>
                    </form>
                </div>
                <div class="wrapper">
                    <h2>Which Account do you want to register</h2>
                    <button class="d-block w-100"><a class="text-danger font-weight-bold" href="/customer-register">Sign Up as Customer</a></button>
                    <button class="d-block w-100"><a class="text-danger font-weight-bold" href="/vendor-register">Sign Up as Vendor</a></button>
                    <button class="d-block w-100"><a class="text-danger font-weight-bold" href="/shipper-register">Sign Up as Shipper</a></button>
                    <div class="input-box button">
                        <input type="Submit" value="Log In">
                    </div>
                </div>
            </main>


