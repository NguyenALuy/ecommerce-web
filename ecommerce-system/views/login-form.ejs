<%- include ('partials/head') %>
  <%- include ('partials/nav') %>
    <%- include ('partials/banner') %>
    <main>
        <div class="wrapper">
            <h2>Log In</h2>
            <form action="#">
                <div class="input-box">
                    <input type="text" id="username" placeholder="Enter your username" pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,15}$"
                        required>
                </div>
                <div class="input-box">
                    <input type="password" id="password" placeholder="Enter password"
                        pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,20}$" required>
                </div>
                <div class="input-box button">
                    <input type="Submit" value="Log In">
                </div> 
                <div class="text">
                    <h3>Create an account? <a href="#">Sign Up Now</a></h3>
                </div>
            </form>
        </div>
    </main>
    

