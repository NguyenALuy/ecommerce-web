<%- include ('partials/head') %>
<main>
    <div class="wrapper">
        <h2>Registration Vendor</h2>
        <form action="#">
            <div class="input-box">
                <input type="text" id="username" placeholder="Enter your username" pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,15}$"
                    required>
            </div>
            <div class="username-err"></div>
            <div class="input-box">
                <input type="password" id="password" placeholder="Create password"
                    pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,20}$" required>
            </div>
            <div class="userpassword-err"></div>
            <div class="input-box">
                <input type="password" id="confirm-pass" placeholder="Confirm password"
                    pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,20}$" required>
            </div>
            <div id="wrong-pass"></div>
            <div class="input-box">
                <input type="text" id="realname" placeholder="Enter your business name" pattern="^.{5,}$" required>
            </div>
            <div class="char-err"></div>
            <div class="input-box">
                <input type="text" id="address" placeholder="Enter your business address" pattern="^.{5,}$" required>
            </div>
            <div class="char-err"></div>
            <div class="input-box">
                <label for="picture">Upload your picture profile:</label>
                <input type="file" id="myFile" name="filename">
            </div>
            <div class="input-box button">
                <input type="Submit" value="Register Now">
            </div>
            <div class="text">
                <h3>Already have an account? <a href="#">Login now</a></h3>
            </div>
        </form>
    </div>
</main>
<%- include ('partials/footer') %>